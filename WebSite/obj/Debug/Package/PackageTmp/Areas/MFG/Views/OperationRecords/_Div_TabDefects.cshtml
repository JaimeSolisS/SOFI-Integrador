@model WebSite.Areas.MFG.Models.ViewModels.OperationRecords.EditViewModel
<form class="form-horizontal" role="form">
    <div class="form-group">
        <div class="row">
            <div class="col-xs-6">
                <h1>@Resources.MFG.OperationRecords.lbl_Defects</h1>
            </div>
            <div class="col-xs-6" style="text-align:right;">
                <button type="button" id="new_reject" class="btn-success btn-pretty btn-lg"><i class="fa fa-plus"></i> @Resources.Common.btn_New</button>
            </div>
        </div>
    </div>
    <div class="form-group rejectstable_div">
        @Html.Action("RejectList", new { OperationRecordID = Model.Operation.OperationRecordID })
    </div>

    <div id="newreject_div" style="display:none;">
        <div class="row">
            <div class="col-xs-12">
                <hr />
                <h2 id="newreject_title">@Resources.Common.btn_New</h2>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">@Resources.MFG.OperationRecords.lbl_DefectType</label>
                <div class="col-xs-4"> 
                       @Html.DropDownList("ddl_Reject", Model.RejectsTypesList, htmlAttributes: new { @class = "form-control select applyfilters", data_live_search = "true" })
                </div>

                <label class="col-md-2 control-label">@Resources.MFG.OperationRecords.lbl_Quantity</label>
                <div class="col-md-4">
                    <div class="input-group input-group-lg">
                        <input id="rejectqty" class="form-control control-numpad onlynumbers" placeholder="Value" type="text">
                        <span class="input-group-addon">@Resources.MFG.OperationRecords.lbl_Pieces</span>
                    </div>
                </div>
            </div>
        </div>
        

        <br />
        <div class="row">
            <div class="col-xs-12">
                <div class="input">
                    <button type="button" id="save_reject" class="btn-success btn-pretty btn-lg pull-right"><i class="fa fa-save"></i> @Resources.Common.btn_Save</button>
                </div>
            </div>
        </div>

    </div>
</form>

<style>
    .bootstrap-select > button {
        padding-top: 10px;
        padding-bottom: 10px;
        border-radius: 6px;
        font-size: 16px;
    }
</style>