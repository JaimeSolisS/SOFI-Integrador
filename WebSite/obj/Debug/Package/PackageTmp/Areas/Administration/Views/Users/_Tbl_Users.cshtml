@model List<Core.Entities.User>

<table class="display table table-striped table-bordered table-condensed-xs datatable" cellspacing="0">
    <thead>
        <tr class="font-size-sm bg-primary">
            <th class="padding-5">
                @Resources.User.lbl_UserAccountID
            </th>
            <th class="padding-5">
                @Resources.User.lbl_FullName
            </th>
            <th class="padding-5">
                @Resources.User.lbl_Profile
            </th>
            <th class="padding-5">
                @Resources.User.lbl_Department
            </th>
            <th class="padding-5">
                @Resources.User.lbl_Shift
            </th>
            <th class="padding-5">
                @Resources.Common.lbl_Update
            </th>
            <th class="padding-5">
                @Resources.Common.gvH_DateAdded
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="font-size-sm">
                <td>
                    <div class="tag-serial">
                        @item.UserAccountID
                    </div>
                    <div class="font-italic">
                        @item.eMail
                    </div>
                </td>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.ProfileArrayNames
                </td>
                <td>
                    @item.DepartmentName
                </td>
                <td>
                    @item.ShiftDescription
                </td>
                <td>
                    <b>  @Resources.Common.lbl_On:</b> @item.DateLastMaintFormat
                    <br />
                    <b> @Resources.Common.lbl_By: </b> @item.ChangedByName
                </td>
                <td>
                    @item.DateAddedFormat
                </td>
                <td width="1%">
                    <div class="btn-group btn-group-md dropup">
                        <button type="button" class="btn btn-md btn-info btn-pretty dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-cog"></i> <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li class="edit-user" data-entityid="@item.ID"><a href="#"><i class="fa fa-lg fa-edit text-primary"></i> @Resources.Common.lbl_Edit</a></li>
                            <li class="disable-user" data-entityid="@item.ID"><a href="#"><i class="fa fa-lg fa-ban text-danger"></i> @Resources.Common.lbl_Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>