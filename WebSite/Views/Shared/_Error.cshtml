
<div class="error-container">
    <div class="error-code">@(!String.IsNullOrEmpty(ViewBag.StatusCode.ToString()) ? ViewBag.StatusCode : " ")</div>
    <div class="error-text">page not found</div>
    <div class="error-subtext">The page you requested was not found. We are hardly working to fix this issue.</div>
    <div class="error-subtext">@(!String.IsNullOrEmpty(ViewBag.exception.ToString()) ? ViewBag.exception : "Error ")</div>
    <div class="error-subtext">Try again in several minutes, restart your web browser or <a href="javascript:void(0)">contact the administrator</a>.</div>
    <div class="error-actions">
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-info btn-block btn-lg" onClick="document.location.href = 'index.html';">Back to dashboard</button>
            </div>
            <div class="col-md-6">
                <button class="btn btn-primary btn-block btn-lg" onClick="history.back();">Previous page</button>
            </div>
        </div>
    </div>
    <div class="error-subtext">Or you can use search to find anything you need.</div>
    <div class="row">
        <div class="col-md-12">
            <div class="input-group">
                <input type="text" placeholder="Search..." class="form-control" />
                <div class="input-group-btn">
                    <button class="btn btn-primary"><span class="fa fa-search"></span></button>
                </div>
            </div>
        </div>
    </div>
</div>
