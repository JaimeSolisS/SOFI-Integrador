@model WebSite.Models.ViewModels.LoginAs.IndexViewModel

<div id="loginbox" runat="server" style="margin-top: 50px;" class="mainbox col-md-4 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="login-container">
        <div class="panel panel-primary">
            <div class="panel-heading ui-draggable-handle">
                <div class="panel-title">
                    <h4>
                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>&nbsp;&nbsp;
                        <span>@Resources.LoginAs.lblHeader</span>
                    </h4>
                </div>
            </div>
            <div style="padding-top: 30px" class="panel-body">
                <div style="margin-bottom: 25px" class="form-group">
                    <label class="control-label" for="Domain">@Resources.LoginAs.legendDomain</label>
                    <select id="Domain" name="Domain" data-live-search="true" class="form-control select"></select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="username">@Resources.LoginAs.lbl_UserName</label>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon fa fa-user"></span>
                        <input tabindex="2" type="text" class="form-control" id="username" maxlength="100" placeholder="@Resources.LoginAs.legendUserName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="password">@Resources.LoginAs.lblHeader</label>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon fa fa-lock"></span>
                        <input tabindex="3" type="password" class="form-control" id="password" maxlength="50" placeholder="@Resources.LoginAs.legendPassword" />
                    </div>
                </div>
                <div style="margin-top: 10px" class="form-group">

                    <button id="btnCancel" type="button" class="btn btn-danger btn-pretty">@Resources.Common.btn_Back</button>
                    <button id="btnLogin" type="button" class="btn btn-success btn-pretty pull-right">@Resources.LoginAs.btnLoginAs</button>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles
{
    <link href="~/Content/PLUGINS/bootstrap/bootstrap.min.css" rel="stylesheet" />
}