@model List<Core.Entities.Charts_ComputerSettingsDetail>
<div>
    <table  class="table table-striped table-bordered table-condensed-xs" cellspacing="0" style="width:100%">
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>                    
                    <div class="form-group">
                        <div class="col-md-4">
                            <label style="padding-top: 6px;">@item.OptionName</label>
                        </div>                        
                        <div class="col-md-8 OptionInput_@item.Chart_SettingID">
                            @Html.Action("ShowChartOption", new { OptionID = item.OptionID,
                           DefaultOptionValue =item.OptionValue,
                           ControlName ="chrtopt_"+ item.OptionID +"_"+item.Chart_SettingID,
                           Chart_SetttingDetailID = item.Chart_SetttingDetailID })
                        </div>
                   </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

