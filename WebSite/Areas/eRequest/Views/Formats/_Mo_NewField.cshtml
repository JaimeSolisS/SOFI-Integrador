@model WebSite.Areas.eRequest.Models.ViewModels.Formats.ModalAddFieldViewModal
<div id="mo_NewField" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close close-2" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Model.Title</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label" for="Name">@Resources.Request.lbl_Name</label>
                            <div class="input">
                                <input type="text" id="Name" class="form-control max-length" maxlength="100" autocomplete="off" value="@Model.ParameterName" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.Request.lbl_Type</label>
                            @Html.DropDownList("ddl_Type", Model.ParameterList, new { @class = "form-control select selectpicker", @Title = Resources.Request.lbl_NothingSelected })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div id="div_length" style="display:none">
                        <div class="col-xs-5">
                            <div class="form-group">
                                <label class="control-label" id="lbl_length" for="Length">@Resources.Request.lbl_Length</label>
                                <div class="input-group">
                                    <input type="text" id="Length" class="form-control positive max-length text-center" autocomplete="off" maxlength="5" value="@Model.ParameterLength" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="div_precition" style="display:none">
                        <div class="col-xs-7">
                            <div class="form-group">
                                <label class="control-label" id="lbl_precition" for="Precition">@Resources.Request.lbl_Precition</label>
                                <input type="text" id="Precition" class="form-control positive max-length text-center" maxlength="5" value="@Model.NumberOfDecimals" />
                            </div>
                        </div>
                    </div>
                    <div id="div_catalog" style="display:none">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="control-label" id="lbl_list" for="ddl_list">@Resources.Request.lbl_CatalogList</label>
                                @Html.DropDownList("ddl_list", Model.CatalogsList, new { @class = "form-control select" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_back" data-dismiss="modal">@Resources.Common.btn_Back</button>
                <button id="btn_ModalAddNewField" type="button" class="btn btn-info">@Resources.Common.btnAdd</button>
            </div>
        </div>
    </div>
</div>
