<div id="mo_signature_2FA" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width: 770px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.Request.lbl_signature</h4>
            </div>
            <div class="modal-body">
                <form id="create-signature-2fa" class="lobi-form">
                    <fieldset class="no-padding">
                        <div class="alert alert-info alert-dismissible padding-10" role="alert">
                            <div class="col-sx-12">
                                <div class="col-xs-12" style="text-align:left;">
                                    @Resources.Request.msg_Signature
                                </div>
                            </div>
                        </div><br /><br />
                        <div class="row">
                            <div class="col-xs-12 ">
                                <div id="div_create_signature_2FA">
                                    <div id="signature_2FA">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Common.btnCancel</button>
                <button id="btn_ResetSignature_2FA" type="button" class="btn btn-warning">@Resources.Request.btn_Reset</button>
                <button id="btn_CreateSignature_2FA" type="button" class="btn btn-success">@Resources.Request.btn_CreateSignature</button>
            </div>
        </div>
    </div>
</div>