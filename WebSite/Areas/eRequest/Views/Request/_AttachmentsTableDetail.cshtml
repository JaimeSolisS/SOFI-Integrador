@model List<Core.Entities.FormatsMedia>
<div class="slider" style="width:100%;">
    <table class="table display table-condensed table-strdisplay table table-striped table-bordered table-condensed-xs margin-noneiped margin-bottom-none">
        <thead>
            <tr class="font-size-sm" style="background-color:#00519e;color:whitesmoke;opacity:0.9;">
                <th class="center w-100">@Resources.CI.DashboardManagement.gvh_Settings_Seq</th>
                <th class="left">@Resources.CI.DashboardManagement.gvh_Settings_File</th>
                <th width="1%">@Resources.Common.gvH_Options</th>
            </tr>
        </thead>
        @if (Model.Count > 0)
        {
            <tbody>
                @foreach (var item in Model)
                {

                    if (item.FileName.ToUpper().EndsWith(".MP4"))
                    {
                        <tr class="font-size-sm carrusel-media-row" data-fileid="@item.Fileid" data-sequence="@item.Seq" data-neworder="@item.Seq" data-pk="@item.FormatMediaID">
                            <td class="center w-100">@item.Seq </td>
                            <td class="text-info">@item.FileName</td>
                            <td class="center">
                                <button class="btn btn-info format-media-play-video" data-filename="@item.FileName" data-url="@item.Path" title="@Resources.CI.DashboardManagement.tt_SettingsPlay"><span class="glyphicon glyphicon-play"></span></button>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="font-size-sm request-media-row" data-fileid="@item.Fileid" data-sequence="@item.Seq" data-neworder="@item.Seq" data-pk="@item.FormatMediaID">
                            <td class="center w-100">@item.Seq </td>
                            <td class="text-info">@item.FileName</td>
                            <td class="center">
                                <button class="btn btn-info format-media-download" data-filename="@item.FileName" data-url="@item.Path" title="@Resources.CI.DashboardManagement.tt_SettingsPlay"><span class="glyphicon glyphicon-play"></span></button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        }
    </table>
</div>