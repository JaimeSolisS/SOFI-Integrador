<div id="mo_2FA" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width: 400px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.Request.lbl_Approval</h4>
            </div>
            <div class="modal-body">
                <form id="create-form-2fa" class="lobi-form">
                    <fieldset class="no-padding">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="control-label">@Resources.Request.lbl_Folio: </label>
                                    <label class="control-label" style="color:blue; font-weight:bold;">20000010</label>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="control-label">@Resources.Request.lbl_Type: </label>
                                    <label class="control-label" style="color:red; font-weight:bold;">Pase de salida</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 ">
                                <div class="form-group">
                                    <label class="control-label">@Resources.Request.lbl_Concept: </label>
                                    <label class="control-label"><b>Mucho texto aqui para poner lalalalalalalal</b></label>
                                </div>
                            </div>
                        </div>
                        <hr style="height:0px; border-top: 2px solid black;">
                        <div class="alert alert-info alert-dismissible padding-10" role="alert">
                            <div class="col-sx-12">
                                <div class="col-xs-12" style="text-align:left;">
                                    @Resources.Request.msg_Msg2FA
                                </div>
                            </div>
                        </div><br /><br />
                        <div class="row">
                            <div class="col-xs-12 ">
                                <div class="form-group">
                                    <label class="control-label" for="txt_code">@Resources.Request.lbl_Code</label>
                                    @Html.TextBox("txt_code", "", new { @class = "form-control max-length", @autocomplete = "off", @maxlength = "8" })
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom" data-dismiss="modal">@Resources.Common.btn_Close</button>
                <button id="btn_2fa_forward" type="button" class="btn btn-warning">@Resources.Request.lbl_Forward</button>
                <button id="btn_2fa_acept" type="button" class="btn btn-success">@Resources.Common.btn_Accept</button>
            </div>
        </div>
    </div>
</div>