<div id="mo_phase_approval" class="modal fade" style="z-index:9;" role="dialog">
    <div class="modal-dialog" style="width: 800px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.Request.lbl_Approval</h4>
            </div>
            <div class="modal-body">
                <form id="phase_approval_form" class="lobi-form">
                    <fieldset class="no-padding">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-size:16px;">@Resources.Request.lbl_Folio: </label>
                                    <label class="control-label" style="color:blue; font-size:16px; font-weight:bold;">20000010</label>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-size:16px;" >@Resources.Request.lbl_Type: </label>
                                    <label class="control-label" style="color:red; font-size:16px; font-weight:bold;">Pase de salida</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 ">
                                <div class="form-group">
                                    <label class="control-label" style="font-size:16px;">@Resources.Request.lbl_Concept: </label>
                                    <label id="moTxtConcept" class="control-label" style="font-size:16px; font-weight:bold;"></label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 ">
                                <div class="form-group">
                                    <label class="control-label" for="txt_coment_approval" style="font-size:16px;">@Resources.Request.lbl_Comments:</label>
                                    @Html.TextArea("txt_coment_approval", "", new { @class = "form-control max-length", @autocomplete = "off", @maxlength = "255", @rows = "5" })
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Common.btnCancel</button>
                <button id="btn_Reject_Request" type="button" class="btn btn-danger">@Resources.Request.btn_Reject</button>
                <button id="btn_Approval_Request" type="button" class="btn btn-success">@Resources.Request.btn_Approve</button>
            </div>
        </div>
    </div>
</div>