@model List<Core.Entities.KioskCarouselMediaTmp>
<div class="alert alert-warning alert-dismissible col-sm-12" id="alert_background_image" role="alert" style="display: block; background-color: rgb(254, 151, 10);">
    <div class="col-xs-11">
        <strong>@Resources.HR.Kiosk.lbl_Attention</strong> @Resources.HR.Kiosk.msg_Sort
    </div>
    <div class="col-xs-1">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
</div>

<table class="display table table-condensed table-striped sortable-table" id="tbl_attachments" cellspacing="0">
    <thead>
        <tr class="font-size-sm" style="background-color:#00519e;color:whitesmoke;opacity:0.9;">
            <th class="center w-100">#</th>
            <th class="left">@Resources.CI.DashboardManagement.gvh_Settings_File</th>
            <th class="left w-120">@Resources.Common.gvH_Options</th>
        </tr>
    </thead>
    @if (Model.Count > 0)
    {
        <tbody>
            @foreach (var item in Model)
            {

                if (item.FileName.ToUpper().EndsWith(".MP4"))
                {
                    <tr class="font-size-sm carrusel-media-row" data-sequence="@item.Seq" data-neworder="@item.Seq" data-pk="@item.KioskCarouselMediaID">
                        <td class="center w-100">@item.Seq </td>
                        <td class="text-info">@item.FileName</td>
                        <td class="pull-right">
                            <button class="btn btn-info carrusel-media-play-video" data-filename="@item.FileName" data-url="@item.Path" title="@Resources.CI.DashboardManagement.tt_SettingsPlay"><span class="glyphicon glyphicon-play"></span></button>
                            <button class="btn btn-danger carrusel-media-delete" data-fileid="@item.KioskCarouselMediaID" title="@Resources.HR.Kiosk.tooltip_RemoveItemMedia"><span class="glyphicon glyphicon-trash"></span></button>
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="font-size-sm carrusel-media-row" data-sequence="@item.Seq" data-neworder="@item.Seq" data-pk="@item.KioskCarouselMediaID">
                        <td class="center w-100">@item.Seq </td>
                        <td class="text-info">@item.FileName</td>
                        <td class="pull-right">
                            <button class="btn btn-info carrusel-media-download" data-filename="@item.FileName" data-url="@item.Path" title="@Resources.CI.DashboardManagement.tt_SettingsPlay"><span class="glyphicon glyphicon-play"></span></button>
                            <button class="btn btn-danger carrusel-media-delete" data-fileid="@item.KioskCarouselMediaID" title="@Resources.HR.Kiosk.tooltip_RemoveItemMedia"><span class="glyphicon glyphicon-trash"></span></button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    }
</table>