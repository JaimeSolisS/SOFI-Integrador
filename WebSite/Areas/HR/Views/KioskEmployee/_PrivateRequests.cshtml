@model List<Core.Entities.KioskUserRequest>
<div id="mo_PrivateRequests" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false" style="align-content:center; width:100% !important; height:100% !important; z-index:9">
    <div class="modal-dialog" style="height:100% !important; width: 100%;margin-top:0px">
        <div class="modal-content" style="height:100% !important; width: 100%">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-10">
                        <h1 class="modal-title">@Resources.HR.Kiosk.title_Requests</h1>
                    </div>
                    <div class="col-xs-1">
                        <button type="button" id="btn_AddPrivateRequest" style="width:100%" class="btn btn-success HeaderModalButtons" aria-hidden="true">@Resources.Common.btn_New</button>
                    </div>
                    <div class="col-xs-1">
                        <button type="button" id="btn_ClosePrivateRequest" style="width:100%" class="btn btn-danger HeaderModalButtons" aria-hidden="true">@Resources.Common.btn_Close</button>
                    </div>
                </div>
            </div>
            <div class="modal-body" style="overflow-y:auto; height:90vh" id="div_Tbl_KioskRequests" >
                <div class="row">
                    <div class="col-xs-12">
                        <div class="alert alert-info alert-dismissible col-sm-12" id="alert_background_image" role="alert" style="margin-bottom:1%;">
                            <div class="col-xs-12" style="text-align:center;">
                                <h3 class="fg-white margin-bottom-none">@Resources.HR.Kiosk.alert_PrivateRequestsInfo</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-2">
                            <label class="form-control no-border bg-transparent font-size-lg" style="padding-left: 0em;">@Resources.HR.Kiosk.lbl_RequestNumber</label>
                        </div>
                        <div class="col-xs-2">
                            @Html.TextBox("Mo_RequestNumberFilter", "", new { @class = "form-control input-lg" })
                        </div>
                        <div class="col-xs-2">
                            <button type="button" class="btn btn-success btn-lg"
                                    style="margin-top: 3px; height:100% !important; background-color:dodgerblue; border-color:dodgerblue;"
                                    id="btn_mo_SearchRequestNumber">
                                @Resources.Common.btn_Search
                            </button>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-12" id="div_Tbl_PrivateRequests">
                        @Html.Partial("~/Areas/HR/Views/KioskEmployee/_Tbl_PrivateRequests.cshtml", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>