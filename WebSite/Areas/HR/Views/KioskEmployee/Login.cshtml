                                <div class="tile-body padding-top-bottom-10 row">
                                    <div class="col-sm-6">
                                        <div class="col-sm-12 padding-left-right-5">
                                            <h2 class="margin-top-5">
                                                <span style="color:springgreen;font-size:40px">@Model.PrePayRollTotalHours</span>
