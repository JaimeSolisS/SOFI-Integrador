    </div>

    @Html.Hidden("CloseSessionAfter", Model.SessionTime)
    @Html.Hidden("SessionTimeWarning", Model.SessionTimeWarning)
    @Html.Hidden("EmployeeID", Model.EmployeeID)
    @Html.Partial("_ImageResourceModal")

    @Html.Partial("_GenericMessageBox")

    <div id="div_Generic_Modal">

    </div>
    <div id="div_Generic_Modal_2">

    </div>

    <div id="div_Mo_Suggestions">

    </div>

    <div id="div_Request_Modal">

    </div>

    <div id="div_OpportunityProgramMediaText">

