@model WebSite.Areas.HR.Models.ViewModels.KioskEmployee.LoginUserViewModel
@{
    Layout = "~/Areas/HR/Views/Shared/_FullScreenKioskLayout.cshtml";
}
<div class="BackImage" id="main_kiosk" style="background-image: url(@Model.BackgroundImage);">
    <div class="container-fluid start-screen left h-100 padding-top-70 font-size-base" id="div_boxPanelLeft">
        @if (Model.UserInfoList.Count > 0)
        {
            var UserEntity = Model.UserInfoList.FirstOrDefault();
            @Html.Hidden("UserCode", UserEntity.clave)

            <div class="page-title padding-5">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body profile">
                            <div class="profile-image">
                                <img src="~/Content/img/SmileyFace.png" style="background-color:white" />
                            </div>
                            <div class="profile-data">
                                <div class="profile-data-name">@Resources.HR.Kiosk.lbl_Name</div>
                                <div class="profile-data-title font-size-lg" id="userinfo_name">@UserEntity.nombre</div>
                            </div>
                            <div class="profile-controls">

                            </div>
                        </div>

                        <div class="panel-body" style="height:60vh">
                            <div class="contact-info">
                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_eMail</small><br>
                                    <span id="user_email" class="font-size-lg">@UserEntity.correo</span>
                                </p>
                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_MaritalStatus</small>
                                    <br>
                                    <span class="font-size-lg">@UserEntity.civil</span>
                                </p>
                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_Address</small><br>
                                    <span class="font-size-lg"> @UserEntity.calle @UserEntity.colonia</span>
                                </p>
                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_Phone</small><br>
                                    <span class="font-size-lg"> @UserEntity.telefono</span>
                                </p>
                                <br>

                                <div style="border:solid; border-width:1px; border-color:lightgrey; width:100%"></div><br>

                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_AdmissionDate</small><br>
                                    <span class="font-size-lg"> @UserEntity.altaFormatted </span>
                                </p>
                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_NNS</small><br>
                                    <span class="font-size-lg"> @UserEntity.nss</span>
                                </p>
                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_CURP</small><br>
                                    <span class="font-size-lg">  @UserEntity.curp </span>
                                </p>
                                <p>
                                    <small>@Resources.HR.Kiosk.lbl_RFC</small><br>
                                    <span id="span_rfc" class="font-size-lg">@UserEntity.rfc</span>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-md-8">
                    <div class="row">
                        <div class="col-xs-6" id="div_GetCoursesModal">
                            <div class="tile border-1 bg-white">
                                <div class="tile-body">
                                    <div class="col-sm-6 padding-left-right-0">
                                        <div class="col-sm-12 padding-left-right-0">
                                            <h2 class="margin-top-5 margin-bottom-5" style="font-size:40px" id="AvailableCoursesCount">@Model.EmployeMovements.CoursesAvailable</h2>
                                        </div>
                                        <div class="col-sm-12 text-left margin-top-10 padding-left-right-0">
                                            <h5><b>@Resources.HR.Kiosk.lbl_Courses</b></h5>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 text-right">
                                        <i style="color:royalblue" class="fa fa-users tile-icon fa-4x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6" id="div_GetSuggestionModal">
                            <div class="tile border-1 bg-white">
                                <div class="tile-body">
                                    <div class="col-sm-6 padding-left-right-0">
                                        <div class="col-sm-12 padding-left-right-0">
                                            <h2 class="margin-top-5 margin-bottom-5" style="font-size:40px"><span id="span_suggestions_count">@Model.EmployeMovements.SuggestionsCount</span></h2>
                                        </div>
                                        <div class="col-sm-12 text-left margin-top-10 padding-left-right-0">
                                            <h5><b>@Resources.HR.Kiosk.title_Suggestions</b></h5>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 text-right">
                                        <i style="color:grey; font-size: 80px" class="fa fa-lightbulb-o tile-icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6" id="div_GetPrePayrollModal">
