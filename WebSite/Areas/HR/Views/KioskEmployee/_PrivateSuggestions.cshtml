@model List<Core.Entities.KioskEmployeeSuggestion>
<div id="mo_PrivateSuggestions" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false" style="align-content:center; width:100% !important; height:100% !important; z-index:9">
    <div class="modal-dialog" style="height:100% !important; width: 100%;margin-top:0px">
        <div class="modal-content" style="height:100% !important; width: 100%">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-10">
                        <h1 class="modal-title">@Resources.HR.Kiosk.lbl_Suggestions</h1>
                    </div>
                    <div class="col-xs-1">
                        <button type="button" id="btn_AddPrivateSuggestion" style="width:100%" class="btn btn-success HeaderModalButtons" aria-hidden="true">@Resources.Common.btn_New</button>
                    </div>
                    <div class="col-xs-1">
                        <button type="button" id="btn_ClosePrivateSuggestion" style="width:100%" class="btn btn-danger HeaderModalButtons" aria-hidden="true">@Resources.Common.btn_Close</button>
                    </div>
                </div>
            </div>
            <div class="modal-body" style="overflow-y:auto; height:90vh" >
                <div class="row">
                    <div class="col-xs-12">
                        <div class="alert alert-info alert-dismissible col-sm-12" id="alert_background_image" role="alert" style="margin-bottom:1%;">
                            <div class="col-xs-12" style="text-align:center;">
                                <h3 class="fg-white margin-bottom-none">@Resources.HR.Kiosk.alert_PrivateSuggestionInfo</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-xs-12" id="div_Tbl_PrivateSuggestions">
                        @Html.Partial("~/Areas/HR/Views/KioskEmployee/_Tbl_PrivateSuggestions.cshtml", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>