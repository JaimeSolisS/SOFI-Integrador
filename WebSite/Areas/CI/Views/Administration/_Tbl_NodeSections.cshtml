@model List<Core.Entities.DashboardArea>
<table class="display table table-condensed table-striped datatable" id="tbl_NodeSections" cellspacing="0">
    <thead>
        <tr class="font-size-sm" style="background-color:#00519e;color:whitesmoke;opacity:0.9;">
            <th width="3%">#</th>
            <th class="left">@Resources.CI.DashboardManagement.gvh_AreaTag</th>
            <th class="left">@Resources.CI.DashboardManagement.gvh_SizeTag</th>
            <th class="left">@Resources.Common.gvH_UpdatedBy</th>
            <th class="w-120" style="text-align: right;">@Resources.Common.gvH_Options</th>
        </tr>
    </thead>
    <tbody class="sectionsortable">
        @foreach (var item in Model)
        {
            <tr class="font-size-sm" newseq="0" seq ="@item.Seq" data-entityid="@item.DashboardAreaID">
                <td class="center">
                     @item.Seq                 
                </td>
                <td>
                    <a class="edit-fieldculture editable-click " data-entityid="@item.DashboardAreaID"
                       data-url="/CI/Administration/UpdateQuickEditable" data-title="@Resources.CI.DashboardManagement.gvh_AreaTag"
                       data-updatenodesection="true" data-parentid="@item.ParentID">
                        @item.Title
                    </a>
                </td>
                <td>
                    <a class="x-editable" data-type="select" data-title="@Resources.CI.DashboardManagement.gvh_SizeTag"
                       data-source="/CI/Administration/SizeList" data-pk="@item.DashboardAreaID" 
                       data-url="/CI/Administration/UpdateQuickEditable" data-value="@item.SizeID" 
                       data-name="SizeID" data-tpl="<select class='form-control select x-editable-select'>">
                        @item.SizeText
                    </a>
                </td>
                <td>
                   <span style="font-weight: bold;">@Resources.Common.lbl_On:</span> @item.DateLastMaintFormat
                    <br />
                    <span style="font-weight: bold;">@Resources.Common.lbl_By:</span> @item.UserFullName
                </td>
                <td style="width:120px; text-align:right">
                    <div class="btn-group dropup">
                        <button class="btn btn-danger delete-nodesection" 
                                data-dashboardareaid="@item.DashboardAreaID"
                                data-parentid="@item.ParentID"
                                title="@Resources.CI.DashboardManagement.tt_DeleteDashboardAreaTag"><span class="glyphicon glyphicon-trash"></span></button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
