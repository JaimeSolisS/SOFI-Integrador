@model WebSite.Areas.CI.Models.ViewModels.Administration.GeneralSettingsViewModel
<div id="mo_GeneralSettings" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.CI.DashboardManagement.lbl_GeneralSettingsTag</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-primary">
                            <div class="panel-heading ui-draggable-handle">
                                <h3 class="panel-title">
                                    <label class="control-label" for="lbl_BackgroundImageTag">@Resources.CI.DashboardManagement.lbl_BackgroundImageTag</label>
                                </h3>
                                <ul class="panel-controls">
                                    <li><button id="btnBackgroudImageChange" class="btn btn-sm btn-info" title="@Resources.Common.tt_BrowseTag"><span class="glyphicon glyphicon-refresh margin-none" style="color:white"></span></button></li>
                                </ul>
                            </div>
                            <div class="panel-body padding-none">
                                <div class='col-xs-12 resource-interspace'>
                                    <div id="div_DashBoardSettingsImage" class='resource-preview-no-borderradius-w100  @Model.imgOrientation' title='@Model.imgTitle' style='background-image: url(@Model.imgSource)'>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="panel panel-primary">
                            <div class="panel-heading ui-draggable-handle">
                                <h3 class="panel-title">
                                    <label class="control-label" for="lbl_ScreenSaverVideo">@Resources.CI.DashboardManagement.lbl_ScreenSaverVideoTag</label>
                                </h3>
                                <ul class="panel-controls">
                                    <li><button id="btnBackgroudVideoChange" class="btn btn-sm btn-info" title="@Resources.Common.tt_BrowseTag"><span class="glyphicon glyphicon-refresh margin-none" style="color:white"></span></button></li>
                                </ul>
                            </div>
                            <div class="panel-body padding-none">
                                <div class="row">
                                    <video id="v_video" controls="controls" class="videoDetail" style="width:100%">
                                        <source id="s_video" src="@Model.videoSrc" type="video/mp4">
                                    </video>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 padding-none">
                                        <div class="form-group">
                                            <label class="control-label" for="lbl_ScreenSaverTag">@Resources.CI.DashboardManagement.lbl_ScreenSaverIntervalTag</label>
                                            <div class="input-group">
                                                <input type="text" maxlength="10" class="form-control onlynumbers" placeholder="0" id="txt_ScreenSaverInterval" name="txt_ScreenSaverInterval" value="@Model.ScreenSaverInterval" />
                                                <span class="input-group-addon">@Resources.CI.DashboardManagement.lbl_SecondsTag</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hidden">
                        <input type="hidden" id="hf_ImageUrl" value="@Model.imgURL" />
                        <input type="hidden" id="hf_VideoUrl" value="@Model.videoURL" />

                        <form action="~/CI/Administration/UploadDashboardSetting" class="form-dropzone-backgroundscreen dropzone">
                            @Html.Hidden("TransactionSettings", Model.TransactionID)
                        </form>

                        <form action="~/CI/Administration/UploadDashboardSetting" class="form-dropzone-videoscreen dropzone">
                            @Html.Hidden("TransactionSettings", Model.TransactionID)
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Common.btn_Close</button>
                    <button type="button" id="btn_UpdateGeneralSettings" class="btn btn-success"  title="@Resources.CI.DashboardManagement.tt_UpdateGralSettingTag">@Resources.CI.DashboardManagement.lbl_UpdateGralSettingTag</button>
                </div>
            </div>
        </div>
    </div>
