        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-primary">
                    <div class="panel-heading  ui-draggable-handle">
                        <h3 class="panel-title">
                            @Resources.CI.DashboardManagement.lbl_CarouselVideosTag
                        </h3>
                    </div>

                    <div class="panel-body">
                        <div class="row margin-bottom-5">
                            <div class="col-xs-12 padding-0">
                                <div class="border-dashed-2">
                                    <form action="~/CI/Administration/UploadCarouselVideo" class="dropzone form-dropzone-carousel needsclick dz-clickable">
                                        @Html.Hidden("TransactionSettings", Model.TransactionID)
                                        <div class="dz-message center-content padding-top-10">
                                            <img src="~/Content/img/UploadCloud.png" />
                                        </div>
                                        <div class="center-content">
                                            @Resources.CI.DashboardManagement.lbl_Dropfiles
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 padding-0">
                                <div id="div_boxGeneralSettingTable">
                                    @Html.Partial("_GeneralSettingsAttachmentsTable", Model.CarouselVideosList)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hidden">
            <input type="hidden" id="hf_ImageUrl" value="@Model.imgURL" />
            <input type="hidden" id="hf_VideoUrl" value="@Model.videoURL" />

            <form action="~/CI/Administration/UploadDashboardSetting" class="form-dropzone-backgroundscreen dropzone">
                @Html.Hidden("TransactionSettings", Model.TransactionID)
            </form>

            <form action="~/CI/Administration/UploadDashboardSetting" class="form-dropzone-videoscreen dropzone">
                @Html.Hidden("TransactionSettings", Model.TransactionID)
            </form>
        </div>
    </div>
</div>
<div class="hidden">
    @Html.Hidden("hf_TransactionID", Model.TransactionID)
    <label id="lbl_DeleteButtonTag"> @Resources.Common.btnDeleteTag </label>
    <label id="lbl_CancelButtonTag"> @Resources.Common.btnCancel</label>
