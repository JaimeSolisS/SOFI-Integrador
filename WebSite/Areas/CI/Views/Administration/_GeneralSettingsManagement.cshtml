@model WebSite.Areas.CI.Models.ViewModels.Administration.GeneralSettingsViewModel
<div class="content-frame">
    <div class="content-frame-top">
        <div class="page-title">
            <h2 class="margin-none">@Resources.CI.DashboardManagement.lbl_GeneralSettingsTag </h2>
        </div>
        <div class="pull-right">
            @Html.ActionLink(Resources.Common.btn_Back, "Index", "Administration", null, new { @class = "btn btn-default btn-pretty btn-back-main" })
            <button id="btn_UpdateGeneralSettings" class="btn btn-success" title="@Resources.CI.DashboardManagement.lbl_UpdateGralSettingTag" data-dashboardID="0"><span class="fa fa-sa"> @Resources.CI.DashboardManagement.lbl_UpdateGralSettingTag </span></button>
        </div>
    </div>
    <div class="content-frame-body content-frame-body-all">
        <div class="row margin-bottom-5">
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading ui-draggable-handle">
                        <h3 class="panel-title">
                            <label class="control-label" for="lbl_BackgroundImageTag">@Resources.CI.DashboardManagement.lbl_BackgroundImageTag</label>
                        </h3>
                        <ul class="panel-controls">
                            <li><button id="btnBackgroudImageChange" class="btn btn-info" title="@Resources.CI.DashboardManagement.lbl_UploadImageTag"><span class="glyphicon glyphicon-upload margin-none" style="color:white"></span></button></li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class='col-xs-12 resource-interspace margin-bottom-none'>
                                <div id="div_DashBoardSettingsImage" class='resource-preview-no-borderradius-w100  @Model.imgOrientation' title='@Model.imgTitle'
                                     style='background-image: url(@Model.imgSource);width:100%;height:260px;'>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="lbl_CloseWindowAfterTag">@Resources.CI.DashboardManagement.lbl_CloseWindowAfterTag</label>
                                        <div class="input-group col-md-3">
                                            <input type="text" maxlength="10" class="form-control onlynumbers text-right" placeholder="0" id="txt_CloseWindowAfter" name="txt_CloseWindowAfter" value="@Model.CloseWindowAfter" />
                                            <span class="input-group-addon">@Resources.CI.DashboardManagement.lbl_SecondsTag</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row margin-top-10">
                            <div class="col-xs-12">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="lbl_ScreenSaverTag">@Resources.CI.DashboardManagement.lbl_ScreenSaverIntervalTag</label>
                                        <div class="input-group col-md-3">
                                            <input type="text" maxlength="10" class="form-control onlynumbers text-right" placeholder="0" id="txt_ScreenSaverInterval" name="txt_ScreenSaverInterval" value="@Model.ScreenSaverInterval" />
                                            <span class="input-group-addon">@Resources.CI.DashboardManagement.lbl_SecondsTag</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

