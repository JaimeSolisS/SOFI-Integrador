@model WebSite.Areas.MNT.Models.ViewModels.EnergySensors.EnergySensorsEditViewModel
<div id="mo_Attachments" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width:30%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.MNT.EnergySensors.lbl_UploadImage</h4>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.ActionPlan.lbl_Attachments:</label>
                            <div class="input-group col-xs-12">

                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="border-dashed-2">
                                            <form action="~/Attachments/SaveDropzoneJsUploadedFiles" class="form-dropzone needsclick dz-clickable h-150">
                                                @Html.Hidden("ReferenceID", Model.TempAttachmentID)
                                                @Html.Hidden("AttachmentType", Model.AttachmentType)
                                                <div class="dz-message center-content padding-top-10">
                                                    <img src="~/Content/img/UploadCloud.png" />
                                                </div>
                                                <div class="center-content">
                                                    @Resources.Common.lbl_Dropfiles
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>


                    <div class="row">
                        <div class="col-xs-12">
                            <div id="AttachmentsTable">
                                @Html.Action("Get", "Attachments", new { Area = "", ReferenceID = Model.ES.EnergySensorID, AttachmentType = Model.AttachmentType })
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_back" data-dismiss="modal">@Resources.Common.btn_Back</button>
                <button id="btn_SaveTempImg" type="button" class="btn btn-info">@Resources.Common.btn_Save</button>
            </div>
        </div>
    </div>
</div>

@Html.Hidden("Mo_OperationTaskID", Model.ES.EnergySensorID)
@Html.Hidden("TempAttachmentID", Model.TempAttachmentID)
