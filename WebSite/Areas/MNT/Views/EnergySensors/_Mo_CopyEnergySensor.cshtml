@model WebSite.Areas.MNT.Models.ViewModels.EnergySensors.EnergySensorsEditViewModel
<div id="mo_CopyEnergySensor" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.MNT.EnergySensors.lbl_CopyEnergySensor</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MNT.EnergySensors.lbl_NameForCopy</label>
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control moldScrapValue max-length" maxlength="100" value="@Model.ES.SensorName" id="txt_NewNameForCopiedRecord" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_back" data-dismiss="modal">@Resources.Common.btn_Back</button>
                <button id="btn_SaveEnergySensorCopy" type="button" class="btn btn-info">@Resources.Common.btn_Save</button>
            </div>
        </div>
    </div>
</div>

@Html.Hidden("EnergySensorID", @Model.ES.EnergySensorID);