@model WebSite.Areas.Administration.Models.ViewModels.Profiles.EditViewModel
<!-- START CONTENT FRAME -->
<div class="content-frame">
    <div class="content-frame-top">
        <div class="page-title">
            <h2 class="remove-margins"> @Resources.User.lbl_Profile: <span class="invoice-id"> @Model.EditProfile.ProfileName </span></h2>
        </div>
        <div class="pull-right">
            @Html.ActionLink(Resources.Common.btn_Back, "Index", "Profiles", null, new { @class = "btn btn-default btn-pretty" })
            <button id="btn_Save" class="btn btn-success" title="@Resources.Common.tt_Save"><span class="fa fa-save"> @Resources.Common.tt_Save</span></button>
        </div>
    </div>
    <div class="content-frame-body content-frame-body-all">
        <div>
            @Html.Hidden("ProfileID", Model.EditProfile.ProfileID)
            @Html.Hidden("SelectedMenusId")
            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label" for="ProfileName">@Resources.User.lbl_Profile</label>
                    <label class="input-group">
                        <span class="input-group-addon glyphicon glyphicon-user"></span>
                        @Html.EditorFor(model => model.EditProfile.ProfileName, new { htmlAttributes = new { @class = "form-control max-lenght", placeholder = Resources.User.lbl_Profile, maxlength = "50" } })
                    </label>
                </div>
                <div class="col-sm-6">
                    <div class="form-group" style="display:none;">
                        <label class="control-label" for="OrganizationID">@Resources.User.lbl_Organization</label>
                        <label class="input-group">
                            <span class="input-group-addon glyphicon glyphicon-user"></span>
                            @Html.DropDownList("OrganizationID", Model.OrganizationsList, htmlAttributes: new { @class = "form-control chosen-select", disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <h4>@Resources.Common.lbl_Menus</h4>
                            </div>
                        </div>
                        <div class="panel-body">
                            <input id="jstree-search" type="text" placeholder="@Resources.Common.lbl_Search" class="form-control" />
                            <div id="AppProfileMenus" class="scroll_jstree">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div id="event_dashboard" class="panel panel-primary" style="display:none;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                @Resources.User.lbl_EventsDashboard
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <div id="events_table">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>

@Html.Partial("_Mo_Create")
<style>
    .scroll_jstree {
        overflow: auto;
        white-space: nowrap;
    }
</style>

@section Styles
{
    <link href="~/Content/PLUGINS/jstree/style.css" rel="stylesheet" />
}


@section scripts {
    <script src="~/Scripts/PLUGINS/jstree/jstree.js"></script>
    <script type="text/javascript" src="~/Scripts/Administration/Profiles/Edit.js" charset="utf-8"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var LangResources = {
                lbl_SelectEvents: "@Resources.Profile.lbl_SelectEvents"
            };

            EditInit(LangResources);
        });
    </script>
}

