<div class="modal fade" id="m_Create" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm w-350" role="document">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.Common.lbl_Create</h4>
            </div>
            <div class="modal-body">
                <form id="create-profile-form" class="lobi-form">
                    <fieldset class="no-padding"></fieldset>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="control-label" for="NewProfileName">@Resources.User.lbl_Profile</label>
                                <div class="input-group">
                                    <span class="input-group-addon glyphicon glyphicon-user"></span>
                                    <input type="text" id="NewProfileName" name="NewProfileName" placeholder="@Resources.Profile.lbl_AddProfilePhTag" maxlength="30" class="form-control max-lenght" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-pretty zoom" data-dismiss="modal">@Resources.Common.btn_Back</button>
                <button id="btn_add_profile" type="button" class="btn btn-primary btn-pretty zoom">@Resources.Common.lbl_Create</button>
            </div>
        </div>
    </div>
</div>


