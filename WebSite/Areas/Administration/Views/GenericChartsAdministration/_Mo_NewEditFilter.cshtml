@model WebSite.Areas.Administration.Models.ViewModels.GenericCharts.NewEditDataChartFilterViewModel
<div id="mo_ChartFilter" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Model.NewEditTitle</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="">
                            <label class="control-label" for="MachineName">@Resources.GenericCharts.lbl_FilterName</label>
                            @Html.TextBox("txt_FilterName", "", new { @class = "form-control max-length", @maxlength = "100" })
                        </div>
                    </div>
                    <div class="col-sm-12" style="padding-top:1%">
                        <div class="form-group">
                            <label class="control-label" for="MachineDescription">@Resources.GenericCharts.lbl_FilterCategories</label>
                            @Html.DropDownList("ddl_FilterType", Model.FilterTypes_List, new { @class = "form-control selectpicker" })
                        </div>
                    </div>

                    <div class="show_if_type_list" style="display:none">
                        <div class="col-sm-12" style="padding-top:1%">
                            <div class="form-group">
                                <label class="control-label" for="MachineDescription">@Resources.GenericCharts.lbl_List</label>
                                @Html.DropDownList("ddl_FilterTypeList", Model.ListsForFilterTypes_List, new { @class = "form-control selectpicker" })
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-12 is_not_list" style="padding-top:1%; display:none">
                        <div class="form-group">
                            <label class="control-label" for="ProductionLine">@Resources.GenericCharts.lbl_DefaultValue</label>
                            <select id="ddl_DefaultValue" class="form-control selectpicker">
                                @foreach (var item in Model.DefaultValue_List)
                                {
                                    <option id="@item.CatalogDetailID" data-valueid="@item.ValueID">@item.DisplayText</option>
                                }
                            </select>
                        </div>
                    </div>

                    @*Begin datos condicionales dependientes de ddl_DefaultValue*@
                    <div class="show_if_default_formula" style="display:none">
                        <div class="col-sm-12" style="padding-top:1%">
                            <div class="form-group">
                                <label class="control-label" for="MachineDescription">@Resources.GenericCharts.lbl_Formula</label>
                                @Html.DropDownList("ddl_FilterFormulasList", Model.FiltersFormulas_List, new { @class = "form-control selectpicker" })
                            </div>
                        </div>
                    </div>
                    <div class="show_if_default_value" style="display:none">
                        <div class="col-sm-12" style="padding-top:1%">
                            <div class="form-group">
                                <label class="control-label" for="ddl_FilterDefaultValuesList">@Resources.GenericCharts.lbl_DefaultValue</label>
                                @Html.DropDownList("ddl_FilterDefaultValuesList", Model.FiltersDefault_List, new { @class = "form-control selectpicker", data_selected = 494 })
                            </div>
                        </div>
                    </div>
                    <div class="show_if_default_input" style="display:none">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label" for="MachineDescription">@Resources.GenericCharts.lbl_InputValue</label>
                                <div class="col-sm-12">
                                    @Html.TextBox("txt_InputValue", "", new { @class = "form-control max-length", @maxlength = "255" })
                                </div>
                            </div>
                        </div>
                    </div>
                    @*End datos condicionales dependientes de ddl_DefaultValue*@


                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.MachineSetups.lbl_Enable</label>
                            <label class="switch switch-small">
                                <input type="checkbox" id="FilterEnabled" checked="@Model.Enabled" />
                                <span> &nbsp;</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_back" data-dismiss="modal">@Resources.Common.btn_Back</button>

                @if (Model.IsEdit)
                {
                    <button id="btn_SaveEditedFilter" type="button" class="btn btn-info">@Resources.Common.btn_Save</button>
                }
                else
                {
                    <button id="btn_SaveNewFilter" type="button" class="btn btn-info">@Resources.Common.btn_Save</button>
                }
            </div>
        </div>
    </div>
</div>