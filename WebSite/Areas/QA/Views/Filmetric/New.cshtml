@model WebSite.Areas.QA.Models.ViewModels.Filmetric.NewViewModel
<div style="float:left">
    <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
            <label class="control-label" for="ddl_Line" style="font-size: 20px;">@Resources.QA.Filmetrics.lbl_line</label>
            <div class="input input-group-lg">
                <a style="font-size:medium">TB1:</a> @Html.RadioButton("ddl_Line", 1)
                <p></p>
                <a style="font-size:medium">TB2:</a> @Html.RadioButton("ddl_Line", 2)
            </div>
        </div>
    </div>


    <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
            <label class="control-label" for="ddl_Material" style="font-size: 20px;">Material</label>
            <div class="input input-group-lg">
                @Html.DropDownList("ddl_Material", Model.MaterialList, htmlAttributes: new { @class = "form-control select applyfilters" })
            </div>
        </div>
    </div>

    <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
            <label class="control-label" for="ddl_Product" style="font-size: 20px;">@Resources.QA.Filmetrics.lbl_product</label>
            <div class="input input-group-lg">
                @Html.DropDownList("ddl_Product", Model.ProductList, htmlAttributes: new { @class = "form-control select applyfilters" })
            </div>
        </div>
    </div>

    <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
            <label class="control-label" for="ddl_Base" style="font-size: 20px;">@Resources.QA.Filmetrics.lbl_Base</label>
            <div class="input input-group-lg">
                @Html.DropDownList("ddl_Base", Model.BaseList, htmlAttributes: new { @class = "form-control select applyfilters" })
            </div>
        </div>
    </div>

    <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
            <label class="control-label" for="ddl_Substract" style="font-size: 20px;">@Resources.QA.Filmetrics.lbl_substract</label>
            <div class="input input-group-lg">
                @Html.DropDownList("ddl_Substract", Model.SubstractList, htmlAttributes: new { @class = "form-control select applyfilters" })
            </div>
        </div>
    </div>
</div>


    <div style="float:right">

        <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
                <div class="form-group">
                    <label class="control-label" for="ddl_Adition" style="font-size: 20px;">Adition</label>
                    <div class="input input-group-lg">
                        @Html.TextArea("ddl_Adition")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4 col-xs-offset-4">
            <div class="form-group">
                <label class="control-label" for="ddl_EuValue" style="font-size: 20px;">EU</label>
                <div class="input input-group-lg">
                    @Html.TextArea("ddl_EuValue")
                </div>
            </div>
        </div>

        <div class="col-xs-4 col-xs-offset-4">
            <div class="form-group">
                <label class="control-label" for="ddl_HcValue" style="font-size: 20px;">HC</label>
                <div class="input input-group-lg">
                    @Html.TextArea("ddl_HcValue")
                </div>
            </div>
        </div>

        <div class="col-xs-4 col-xs-offset-4">
            <div class="form-group">
                <label class="control-label" for="ddl_PuValue" style="font-size: 20px;">PU</label>
                <div class="input input-group-lg">
                    @Html.TextArea("ddl_PuValue")
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
                <div class="form-group">
                    <label class="control-label" for="ddl_BcValue" style="font-size: 20px;">BC</label>
                    <div class="input input-group-lg">
                        @Html.TextArea("ddl_BcValue")
                    </div>
                </div>
            </div>
        </div>

    </div>
