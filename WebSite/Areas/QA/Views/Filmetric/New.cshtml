    <br />
    <br />
        <div class="col-xs-4 col-xs-offset-4">
            <div class="form-group">
                <div class="input" style="text-align:center;">
                    <button type="button" id="create_record" class="btn-success btn-pretty btn-lg"><i class="fa fa-plus"></i> @Resources.Common.btn_Create</button>
                    <button type="button" id="cancel" class="btn-danger btn-pretty btn-lg"><i class="fa fa-times"></i> @Resources.Common.btnCancel</button>
                </div>
            </div>
        </div>

    <style>
        .bootstrap-select > button {
            padding-top: 10px;
            padding-bottom: 14px;
            border-radius: 6px;
            font-size: 16px;
        }
    </style>
    @section scripts {
        <script type="text/javascript" charset="utf-8">
            $(document).ready(function () {
                $(".select").selectpicker({
                    liveSearch: false
                });
                $('.datepicker').datepicker({
                    autoclose: true,
                    format: 'yyyy-mm-dd'
                    //language: LangResources.datepicker_lang
                });

                $('#create_record').on('click', function () {
                    var ProductID = $('#ddl_Product').val();
                    var MaterialID = $('#ddl_Material').val();
                    var SubstractID = $('#ddl_Substract').val();
                    var BaseID = $('#ddl_Base').val();
                    var AdditionID = $('#ddl_Adition').val();
                    var LineID = $("input[name='ddl_Line']:checked").val();
                    var HcValue = $('#ddl_HcValue').val();
                    var BcValue = $('#ddl_BcValue').val();
                    var PuValue = $('#ddl_PuValue').val();
                    var EuValue = $('#ddl_EuValue').val();

                    window.location = "/QA/Filmetric/Create?ProductID=" + ProductID + "&MaterialID=" + MaterialID + "&SubstractID=" + SubstractID + "&BaseID=" + BaseID + "&AdditionID=" + AdditionID + "&LineID=" + LineID + "&HcValue=" + HcValue + "&BcValue=" + BcValue + "&PuValue=" + PuValue + "&EuValue=" + EuValue ;
                });

                $('#cancel').on('click', function () {
                    $('.loading-process-div').show();
                    window.location = "/QA/Filmetric/Index";
                });
            });
        </script>
    }

