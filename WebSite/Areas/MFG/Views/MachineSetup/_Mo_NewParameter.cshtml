@model WebSite.Areas.MFG.Models.ViewModels.MachineSetup.ModalAddParameterViewModel
<div id="mo_NewParameter" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close close-2" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Model.Title</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label" for="Name">@Resources.MFG.MachineSetups.lbl_Name</label>
                            <div class="input">
                                <input type="text" id="Name" class="form-control max-length" maxlength="100" value="@Model.ParameterName" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.MachineSetups.lbl_Type</label>
                            @Html.DropDownList("ddl_Type", Model.ParameterList, new { @class = "form-control select selectpicker" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div id="div_length">
                        <div class="col-xs-5">
                            <div class="form-group">
                                <label class="control-label" id="lbl_length" for="Length">@Resources.MFG.MachineSetups.lbl_Length</label>
                                <div class="input-group">
                                    <input type="text" id="Length" class="form-control onlydecimals max-length" maxlength="9" value="@Model.ParameterLength" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="div_precition">
                        <div class="col-xs-7">
                            <div class="form-group">
                                <label class="control-label" id="lbl_precition" for="Precition">@Resources.MFG.MachineSetups.lbl_Precition</label>
                                <input type="text" id="Precition" class="form-control onlydecimals max-length" maxlength="9" value="@Model.NumberOfDecimals" />
                            </div>
                        </div>
                    </div>
                    <div id="div_catalog" style="display:none">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="control-label" id="lbl_list" for="ddl_list">@Resources.MFG.MachineSetups.lbl_CatalogList</label>
                                @Html.DropDownList("ddl_list", Model.CatalogsList, new { @class = "form-control select" })
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <br />
                <div class="row">
                    <div class="col-xs-5">
                        <div class="form-group">
                            <label class="control-label" for="Usereference">@Resources.MFG.MachineSetups.lbl_UseReference</label>
                            <div class="input-group">
                                <label class="switch switch-small">
                                    <input type="checkbox" id="UseReference" checked="@Model.UserReference" />
                                    <span> &nbsp;</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <div class="form-group">
                            <label class="control-label" for="IsCavity">@Resources.MFG.MachineSetups.lbl_IsCavity</label>
                            <div class="input-group">
                                <label class="switch switch-small">
                                    <input type="checkbox" id="IsCavity" checked="@Model.IsCavity" />
                                    <span> &nbsp;</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label class="control-label" for="Enabled">@Resources.MFG.MachineSetups.lbl_Enable</label>
                            <div class="input-group">
                                <label class="switch switch-small">
                                    <input type="checkbox" id="EnabledParameter" checked="@Model.Enabled" />
                                    <span> &nbsp;</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row" id="hide_referenceName" style="display:none">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label" id="lbl_Reference" for="Reference">@Resources.MFG.MachineSetups.lbl_Reference</label>
                            <div class="input-group col-sm-12">
                                <input type="text" id="Reference" class="form-control max-length" maxlength="9" value="@Model.ReferenceName" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row" id="hide_referenceType" style="display:none">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label" id="lbl_ReferenceList" for="Reference">@Resources.MFG.MachineSetups.lbl_Reference</label>
                            @Html.DropDownList("ddl_ReferenceType", Model.ReferenceTypesList, new { @class = "form-control select selectpicker" })
                        </div>
                    </div>
                </div>

                <div class="row" id="hide_referenceList" style="display:none">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label" id="lbl_ReferenceListCatalog" for="Reference">@Resources.MFG.MachineSetups.lbl_ReferenceList</label>
                            <div class="input-group col-sm-12">
                                @Html.DropDownList("ddl_ReferenceList", Model.ReferenceList, new { @class = "form-control select selectpicker" })
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_back" data-dismiss="modal">@Resources.Common.btn_Back</button>
                @if (Model.IsEdit)
                {
                    <button id="btn_ModalSaveEditParameter" type="button" class="btn btn-info">@Resources.Common.btn_Save</button>
                }
                else
                {
                    <button id="btn_ModalAddNewParameter" type="button" class="btn btn-info">@Resources.Common.btnAdd</button>
                }

            </div>
        </div>
    </div>
</div>

@Html.Hidden("MachineParameterID", Model.MachineParameterID)