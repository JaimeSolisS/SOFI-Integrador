@model WebSite.Areas.MFG.Models.ViewModels.ActionPlan.AssignTaskViewModel
<div id="mo_AssignTask" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.MFG.ActionPlan.lbl_AssignTask</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label" for="assignTask_user">@Resources.MFG.ActionPlan.lbl_Responsable</label>
                            <select id="assignTask_user" class="form-control select" title="@Resources.Common.chsn_SelectOption" data-live-search="true">
                                <option value="0"></option>
                                @foreach (var item in Model.UsersList)
                                {
                                    <option value="@item.ID">@item.FullName</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="assignTask_attendantUserName">@Resources.MFG.ActionPlan.lbl_Attendant</label>
                            <div class="input-group col-xs-12">
                                <input type="text" id="assignTask_attendantUserName" name="assignTask_attendantUserName" class="form-control" />
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label" for="assignTask_sugestedAction">@Resources.MFG.ActionPlan.lbl_SuggestedAction</label>
                            <div class="input-group col-xs-12">
                                <textarea id="assignTask_sugestedAction" name="assignTask_sugestedAction" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="assignTask_date">@Resources.MFG.ActionPlan.lbl_TargetDate</label>
                            <div class='input-group date' id='assignTask_date'>
                                @Html.TextBox("assignTask_dates", Model.CurrentDate, htmlAttributes: new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="assignTask_time">@Resources.MFG.ActionPlan.lbl_TargetTime</label>
                            <div class='input-group date' id='assignTask_time'>
                                @Html.TextBox("assignTask_times", Model.CurrentTime, htmlAttributes: new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-time"></span>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_back" data-dismiss="modal">@Resources.Common.btn_Back</button>
                <button id="btn_AssignResponsableTask" type="button" class="btn btn-info">@Resources.Common.btn_Save</button>
            </div>
        </div>
    </div>
</div>

@Html.Hidden("Mo_OperationTaskID", Model.OperationTaskID)
@Html.Hidden("Mo_CultureAssign", Model.Culture)
