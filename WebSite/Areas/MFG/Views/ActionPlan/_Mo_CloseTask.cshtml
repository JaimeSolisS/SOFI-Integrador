@model WebSite.Areas.MFG.Models.ViewModels.ActionPlan.CloseTaskViewModel
<div id="mo_CloseTask" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width:30%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">@Resources.MFG.ActionPlan.lbl_EditAction</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.ActionPlan.lbl_Date:</label>
                            @Model.CloseDate
                            <div class="input-group col-xs-12">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.MachineSetups.lbl_Machine:</label>
                            @Model.Machine
                            <div class="input-group col-xs-12">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.ActionPlan.lbl_Shifts:</label>
                            @Model.Shift
                            <div class="input-group col-xs-12">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.ActionPlan.lbl_ProblemDescription:</label>
                            @Model.Problem
                            <div class="input-group col-xs-12">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.ActionPlan.lbl_Comments:</label>
                            <div class="input-group col-xs-12">
                                <textarea id="txta_comments" class="form-control"></textarea>
                            </div>
                        </div>
                        <br />
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <input type="checkbox" id="closeOpTask" checked/>
                            <label class="control-label">@Resources.MFG.ActionPlan.lbl_Close</label>
                            <input class="pull-right form-control date_disable" style="width:30%" type="text" id="closeTask_date" />
                            <label class="control-label pull-right">@Resources.MFG.ActionPlan.lbl_CloseDate:</label>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Resources.MFG.ActionPlan.lbl_Attachments:</label>
                            <div class="input-group col-xs-12">

                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="border-dashed-2">
                                            <form action="~/Attachments/SaveDropzoneJsUploadedFiles" class="form-dropzone needsclick dz-clickable h-150">
                                                @Html.Hidden("ReferenceID", Model.TempAttachmentID)
                                                @Html.Hidden("AttachmentType", "TEMPID")
                                                <div class="dz-message center-content padding-top-10">
                                                    <img src="~/Content/img/UploadCloud.png" />
                                                </div>
                                                <div class="center-content">
                                                    @Resources.Common.lbl_Dropfiles
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>


                    <div class="row">
                        <div class="col-xs-12">
                            <div id="AttachmentsTable">
                                @Html.Action("Get", "Attachments", new { Area = "", ReferenceID = Model.OperationTaskID, AttachmentType = "TEMPID" })
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_back" data-dismiss="modal">@Resources.Common.btn_Back</button>
                <button id="btn_CloseTask" type="button" class="btn btn-info">@Resources.Common.btn_Save</button>
            </div>
        </div>
    </div>
</div>

@Html.Hidden("Mo_OperationTaskID", Model.OperationTaskID)
@Html.Hidden("TempAttachmentID", Model.TempAttachmentID)
