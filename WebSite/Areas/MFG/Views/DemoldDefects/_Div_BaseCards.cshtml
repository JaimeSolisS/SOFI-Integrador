@model List<Core.Entities.Catalog>
<div class="uic-wrapper no-touch">
    <ul>
        <li>
            <ul class="cards-wrapper" style="height:38vh !important;">
                <li class="card card-front card-front-base active" style="padding-left: 5px;padding-right: 5px;">
                    <div class="col-sm-12">
                        <h2>@Resources.MFG.DemoldDefects.lbl_BaseCategory</h2>
                        <div class="btn-group btn-group-toggle col-sm-12" data-toggle="buttons">
                            @foreach (var itembase in Model)
                            {
                                <button id="@itembase.CatalogDetailID" class="btn-info btn-pretty btn-lg catbasesoption btn-generic col-sm-3">
                                    <span>@itembase.Param1</span>
                                </button>
                            }
                        </div>
                    </div>
                </li>

                <li class="card card-middle card-middle-base" style="height:38vh !important;">
                    <div class="row" style="text-align:center">
                        <div class="col-sm-4">
                            @*<button type="button" class="btn-back" id="btn-back-base" style="
                                margin-left: 2%;
                                margin-top:0%;
                                width:50%;
                                height:5vh;
                                background-color:orange;
                                color:white;
                                border-radius: 5px 5px;
                                text-align:center">
                                    <span class="fa fa-arrow-left"></span>
                                </button>*@
                        </div>
                        <div class="col-sm-8" style="text-align:left">
                            <h2>@Resources.MFG.DemoldDefects.lbl_Base</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group btn-group-toggle" id="base_container" data-toggle="buttons" style="text-align:left;height:29vh !important; overflow-y: auto;">

                            </div>
                        </div>
                    </div>
                </li>

                <li class="card card-back-base" style="height:38vh !important;">
                    <div class="row" style="text-align:center">
                        <div class="col-sm-12">
                            <div class="col-sm-12" style="border:solid; width:100%; height:34vh !important;">
                                <br />
                                <span class="fa fa-check" style="font-size:40px; color:green"></span>
                                <h3>@Resources.MFG.DemoldDefects.lbl_BaseCategory</h3>
                                <h1><span id="lbl_catbase" class="selectedcardoption"></span></h1>
                                <h3>@Resources.MFG.DemoldDefects.lbl_Base</h3>
                                <h1><span id="lbl_base" class="selectedcardoption"></span></h1>
                                <br />
                            </div>
