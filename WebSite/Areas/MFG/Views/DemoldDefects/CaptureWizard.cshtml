                lbl_AlertMessageTitle: "@Html.Raw(Resources.MFG.DemoldDefects.lbl_AlertMessageTitle)",
                lbl_AlertMessageText: "@Html.Raw(Resources.MFG.DemoldDefects.lbl_AlertMessageText)",
                lbl_NoAddition: "@Html.Raw(Resources.MFG.DemoldDefects.lbl_NoAddition)",
