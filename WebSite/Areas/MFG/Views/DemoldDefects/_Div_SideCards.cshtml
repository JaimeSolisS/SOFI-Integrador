@model List<Core.Entities.Catalog>
<div class="uic-wrapper no-touch">
    <ul>
        <li>
            <ul class="cards-wrapper" style="height:38vh !important;">
                <li class="card card-front card-front-side active">
                    <div class="col-sm-12">
                        <h2>@Resources.MFG.DemoldDefects.lbl_Side</h2>

                        <div class="btn-group btn-group-toggle col-sm-12" data-toggle="buttons">
                            @foreach (var itemside in Model)
                            {
                            <button id="@itemside.CatalogDetailID" class="btn-info btn-pretty btn-lg sideoption btn-generic col-sm-3" ><span>@itemside.ValueID</span></button>
                            }
                        </div>
                    </div>

                </li>

                <li class="card card-middle card-middle-side" style="height:38vh !important">
                    <div class="row" style="text-align:center">
                        <div class="col-sm-12">
                            <div class="col-sm-12 panel_heigth" style="border:solid; width:100%; height:34vh !important">
                                <br />
                                <span class="fa fa-check" style="font-size:40px; color:green"></span>
                                <h3>@Resources.MFG.DemoldDefects.lbl_Side</h3>
                                <h1><span id="lbl_side"  class="selectedcardoption"></span></h1>
                                <br />
                            </div>
                        </div>
                        <h10></h10>
                    </div>
                </li>
            </ul>

            <nav>
                <ul>
                    @*<li><a class="btn-back" id="btn-back-side" style="padding-left: 10px;"><i class="fa fa-arrow-left"></i></a></li>*@
                    <li>
                        <button type="button" class="btn-back" id="btn-back-side" style="
                            top:1px !important;
                            margin-left: 2%;
                            margin-top:0%;
                            width:6vh;
                            height:6vh;
                            background-color:orange;
                            color:white;
                            border-radius: 5px 5px;
                            text-align:center">
                            <span class="fa fa-arrow-left"></span>
                        </button>
                    </li>
                    <li style="display:none"><a class="btn-next" id="btn-next-side">@Resources.Common.dtatbl_sNext <i class="fa fa-arrow-right"></i></a></li>
                </ul>
            </nav>

        </li>
    </ul>
</div>
