@model WebSite.Areas.SG.Models.ViewModels.SecurityGuardConfigurations.NewEditEquipmentViewModel
<div id="mo_NewEquipment" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false" style="z-index:10; width:100%;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title">@Resources.SG.SecurityGuard.btn_AddNewEquipment</h1>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="txtMoNSerie">@Resources.SG.SecurityGuard.lbl_NSerie</label>
                            <div class="input">
                                @Html.TextBox("txtMoNSerie", Model.equipmentEntity.Serial, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="txtEquipmentName">@Resources.SG.SecurityGuard.lbl_EquipmentName</label>
                            <div class="input">
                                @Html.TextBox("txtMoEquipmentName", Model.equipmentEntity.EquipmentName, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="txtMoMark">@Resources.SG.SecurityGuard.lbl_Mark</label>
                            <div class="input">
                                @Html.TextBox("txtMoMark", Model.equipmentEntity.MarkVisitor, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="txtMoModel">@Resources.SG.SecurityGuard.lbl_Model</label>
                            <div class="input">
                                @Html.TextBox("txtMoModel", Model.equipmentEntity.ModelVisitor, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="txtMoMark">@Resources.SG.SecurityGuard.lbl_Owner</label>
                            <div class="input">
                                @Html.TextBox("txtMoOwner", Model.equipmentEntity.UserFullName, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="txtMoCompanyDepartment">@Resources.SG.SecurityGuard.lbl_Company / @Resources.SG.SecurityGuard.lbl_Department</label>
                            <div class="input">
                                @Html.TextBox("txtMoCompanyDepartment", Model.equipmentEntity.DepartmentName, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="txtReasonForUse">@Resources.SG.SecurityGuard.lbl_ReasonForUse</label>
                            <div class="input">
                                @Html.TextBox("txtReasonForUse", Model.equipmentEntity.UseVisitor, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="ddlEquipmentType">@Resources.SG.SecurityGuard.lbl_EquipmentType</label>
                            <div class="input">
                                @Html.DropDownList("ddlEquipmentType", Model.EquipmentTypesList, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            <label class="control-label" for="txtEquipmentDescription">@Resources.SG.SecurityGuard.lbl_Description</label>
                            <div class="input">
                                @Html.TextArea("txtEquipmentDescription", Model.equipmentEntity.EquipmentDescription, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer text-center">
                <button class="btn btn-danger" data-dismiss="modal">@Resources.Common.btnCancel</button>
                <button id="btnSaveNewEditEquipment" class="btn btn-success" data-equipmentid="@Model.equipmentEntity.EquipmentID">
                    @Resources.Common.btn_Save
                </button>
            </div>
        </div>
    </div>
</div>