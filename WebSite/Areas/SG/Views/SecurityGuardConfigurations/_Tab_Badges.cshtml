@model WebSite.Areas.SG.Models.ViewModels.SecurityGuardConfigurations.BadgesViewModel
<div class="panel panel-primary">
    <div class="panel-heading ui-draggable-handle">
        <h3 class="panel-title">@Resources.Common.lbl_Filters</h3>
        <ul class="panel-controls">
            <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
        </ul>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6 col-xs-12 col-md-3 col-lg-3">
                <div class="form-group">
                    <label class="control-label">@Resources.SG.SecurityGuard.lbl_BadgeCode</label>
                    <div class="input">
                        @Html.TextBox("txtBadgeNumber", "", new { @class = "form-control badgesFilter max-length", maxlength = 10 })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12 col-md-3 col-lg-3">
                <div class="form-group">
                    <label class="control-label">@Resources.SG.SecurityGuard.lbl_NBadge</label>
                    <div class="input">
                        @Html.TextBox("txtBadgeName", "", new { @class = "form-control badgesFilter max-length", maxlength = 20 })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12 col-md-3 col-lg-3">
                <div class="form-group">
                    <label class="control-label">@Resources.SG.SecurityGuard.lbl_BadgeType</label>
                    <div class="input">
                        @Html.DropDownList("ddlBadgesList", Model.BadgesTypesList, new { @class = "form-control badgesFilter", multiple = "multiple" })
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-xs-12 col-sm-3 col-md-3 panel-footer text-right">
        <button class="btn btn-info btn-pretty" id="btnSearchSecurityBadges" type="button">@Resources.Common.btn_Search</button>
    </div>
</div>


<div class="panel panel-info">
    <div class="panel-body">
        <div id="divBadgesTable">
            @Html.Partial("_Tbl_Badges", Model.BadgesList)
        </div>
    </div>
</div>
