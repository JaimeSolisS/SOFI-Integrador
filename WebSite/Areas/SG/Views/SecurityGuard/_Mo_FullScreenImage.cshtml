@model WebSite.Areas.SG.Models.FullScreenImgViewModel
<div id="mo_FullScreenImage" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false" style="z-index:10; width:100%;">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title" style="color:white">@Resources.SG.SecurityGuard.title_FullScreenImg</h1>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 display-none" id="divToolName">
                    <div class="form-group">
                        <label class="control-label fsize-25" for="txt_ScanBox">@Resources.SG.SecurityGuard.lbl_ToolName</label>
                        <div class="input">
                            @Html.TextBox("txtToolName", "", new { @class = "input-xl width-100p" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 text-center">
                    <img src="" style="max-height:60vh; max-width:100%" id="img_FullScreenPrview" />
                </div>
            </div>
        </div>
        <div class="modal-footer text-center">
            <button id="btn_CancelFullScreenImage" class="btn btn-danger fsize-25 h-7vh dimiss-modal" data-modalid="mo_FullScreenImage">@Resources.Common.btnCancel</button>
            <button id="btn_UploadFullScreenImage" class="btn btn-info fsize-25 h-7vh"
                    action="~/Attachments/SaveDropzoneJsUploadedFiles" data-referenceid="@Model.TempAttachmentID" data-attachmenttype="TEMPID">
                @Resources.SG.SecurityGuard.lbl_UploadNewPhoto
            </button>
            <button id="btn_UpdateFullScreenImage" class="btn btn-success btn_footer display-none" data-imgsection="" data-referenceimgcontainer="" data-tooltempreference="">
                @Resources.Common.lbl_Update
            </button>
        </div>
    </div>
</div>
